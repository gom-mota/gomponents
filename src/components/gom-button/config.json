{
	"properties": {
		"label": {
			"description": "Texto que fica dentro do botão.",
			"type": "text",
			"default": "Botão"
		},
		"disabled": {
			"description": "Estado habilitado/desabilitado.",
			"type": "check",
			"default": false
		},
		"variant": {
			"description": "Estilo do Botão",
			"type": "radio",
			"options": ["primary", "secondary", "text"],
			"default": "primary"
		},
		"color": {
			"description": "Cor do Botão",
			"type": "radio",
			"options": ["default", "alert"],
			"default": "default"
		},
		"onClick": {
			"description": "Callback chamado ao clicar no botão",
			"type": "function",
			"default": "()=>console.log('button clicked')"
		}
	}
}
